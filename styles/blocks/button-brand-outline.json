{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Brand Outline",
  "blockTypes": [
    "core/button"
  ],
  "styles": {
    "color": {
      "background": "transparent",
      "text": "var(--wp--preset--color--brand-core)"
    },
    "border": {
      "color": "var(--wp--preset--color--brand-core)",
      "width": "1px",
      "style": "solid"
    },
    ":hover": {
      "color": {
        "background": "var(--wp--preset--color--brand-core)",
        "text": "var(--wp--preset--color--base)"
      }
    }
  }
}